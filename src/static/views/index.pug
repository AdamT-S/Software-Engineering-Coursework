    link(rel="stylesheet", href="/style.css")

    block head
  body
    .wrapper
        aside.logo Logo
        nav.nav_bar
            ul
                li.nav_item
                    input(type="text", placeholder="Search", class="nav_search")
                li.nav_item
                    a(href="/continents") Data
                li.nav_item
                    a(href="") <i class="fas fa-user"></i>
        section.graph
            .graph_container
                header
                    h1.graph_title Graph
                .graph_content [Content]
                ul.graph_filters
                    li.graph_filter            
                            input(type="checkbox", name="continentsCheckbox", id="")
                            | Continents
                    li.graph_filter            
                            input(type="checkbox", name="countriesCheckbox", id="")
                            | Countries
                    li.graph_filter  
                            input(type="checkbox", name="citiesCheckbox", id="")
                            | Cities
           
        section.data
           .data_container
                h1 Frequently Asked Questions
                .data_content 
                    each question, index in ['How do I sign up?', 'Can I find demographic breakdowns by age, gender, and ethnicity?', 'Can I access data on birth rates, death rates, and fertility rates?', 'What are the projections for future populations trends?']
                        .accordion
                            .accordion-item(id='question#{index+1}')
                                a(href='#question#{index+1}') #{question}

        footer.footer
            .footer_contact
                h3 Contact Us
                input(type="text", placeholder="Your Name")
                input(type="text", placeholder="Your Email")
                textarea(name="", cols="30", rows="10" placeholder="Your Message")
                button.data_btn(type="submit") Submit
            .footer_siteMap
                h3 Site Map
                a(href="/") Home
                a(href="/continents") Data
                a(href="") About Us
            .footer_icons
                .footer_logo Logo
                .footer_icon 
                     a(href="") <i class="fa fa-phone" aria-hidden="true"></i>
                .footer_icon 
                    a(href="") <i class="fa fa-envelope" aria-hidden="true"></i>
                .footer_icon 
                    a(href="") <i class="fa fa-linkedin-square" aria-hidden="true"></i>
