    block head
  body
    .wrapper
        aside.logo Logo
        nav.nav_bar
            ul
                li.nav_item
                    input(type="text", placeholder="Search", class="nav_search")
                li.nav_item
                    a(href="/continents") Data
                li.nav_item
                    a(href="") <i class="fas fa-user"></i>
        section.graph
            .graph_container
                header
                    h1.graph_title Graph
                .graph_content [Content]
                ul.graph_filters
                    li.graph_filter            
                            input(type="checkbox", name="continentsCheckbox", id="")
                            | Continents
                    li.graph_filter            
                            input(type="checkbox", name="countriesCheckbox", id="")
                            | Countries
                    li.graph_filter  
                            input(type="checkbox", name="citiesCheckbox", id="")
                            | Cities
             
        section.data
          .data_container
            header
              h1 Frequently Asked Questions
            
            each questionId in ['question1', 'question2', 'question3', 'question4']
                .accordion-item(id=questionId)
                  a.accordion-link(href=`#${questionId}`)
                    p
                      if questionId === 'question1'
                        | How do I sign up?
                      else if questionId === 'question2'
                        | Can I have a list of cities?
                      else if questionId === 'question3'
                        | Can I have access to database?
                      else if questionId === 'question4'
                        | Can I see all the continents?
                    ion-icon(name='add-outline')
                    ion-icon(name='remove-outline', class='hide')
                  .answer
                    p
                      if questionId === 'question1'
                        | Simply click on the user icon on the top right corner of the page
                      else if questionId === 'question2'
                        | Yes you can have it on data page
                      else if questionId === 'question3'
                        | Only Admins can have access to database
                      else if questionId === 'question4'
                        | Yes You can see them on Data page


        footer.footer
            .footer_contact
                h3 Contact Us
                input(type="text", placeholder="Your Name")
                input(type="text", placeholder="Your Email")
                textarea(name="", cols="30", rows="10" placeholder="Your Message")
                button.data_btn(type="submit") Submit
            .footer_siteMap
