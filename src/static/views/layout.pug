doctype html
html(lang="en")
  head
    // Meta tags
    meta(charset="UTF-8")
    title
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    // Website description for SEO
    meta(name="description", content="")
    meta(name="author", content="")
    meta(name="keywords", content="")

    // Open Graph social media info
    meta(property="og:url", content="http://www.nytimes.com/2015/02/19/arts/international/when-great-minds-dont-think-alike.html")
    meta(property="og:type", content="article")
    meta(property="og:title", content="When Great Minds Donâ€™t Think Alike")
    meta(property="og:description", content="How much does culture influence creative thinking?")
    meta(property="og:image", content="http://static01.nyt.com/images/2015/02/19/arts/international/19iht-btnumbers19A/19iht-btnumbers19A-facebookJumbo-v2.jpg")

    // FAVICONS info
    link(rel="icon", href="icon_path", type="image/png", sizes="16x16")

    // Outside styling and links info
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    
    link(href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap", rel="stylesheet")

    link(rel="stylesheet", href="/style.css")

    block head
  body
    .wrapper
        aside.logo Logo
        nav.nav_bar
            ul
                li.nav_item
                    input(type="text", placeholder="Search", class="nav_search")
                li.nav_item
                    a(href="") Data
                li.nav_item
                    a(href="") Icon
        section.graph
            .graph_container
                header
                    h1.graph_title Graph
                .graph_content [Content]
                ul.graph_filters
                    li.graph_filter            
                            input(type="checkbox", name="continentsCheckbox", id="")
                            | Continents
                    li.graph_filter            
                            input(type="checkbox", name="countriesCheckbox", id="")
                            | Countries
                    li.graph_filter  
                            input(type="checkbox", name="citiesCheckbox", id="")
                            | Cities
           
        section.data
            .data_container
                header
                    h1.data_title Data:
                .data_droplist
                    | Display:
                    ul
                        li Map
                        li Graph
                .data_droplist
                    | Filter
                    ul
                        li.data_li
                            input(type="text", placeholder="City",class="data_filter", autocomplete="none")
                        li.data_li
                            input(type="text", placeholder="Country",class="data_filter", autocomplete="none")
                        li.data_li
                            input(type="text", placeholder="Continent",class="data_filter", autocomplete="none")
                .data_content
                    block dataContent
                        table.data_table                            
                                tr
                                    th Code
                                    th City
                                    th Population                             
                                each cityData in cities
                                        tr
                                            td #{cityData.code}
                                            td 
                                                a(href=`/cities/city/${cityData.id}`) #{cityData.name}
                                            td #{cityData.population}
                        
                .data_droplist
                    | Export
                    ul
                        li.data_li JPEG
                        li.data_li PDF
                        li.data_li PNG
                .data_btn See Database
        footer.footer
            .footer_contact
                h3 Contact Us
                input(type="text", placeholder="Your Name")
                input(type="text", placeholder="Your Email")
                textarea(name="", cols="30", rows="10" placeholder="Your Message")
                button.data_btn(type="submit") Submit
            .footer_siteMap
                h3 Site Map
                a(href="") Home
                a(href="") Data
                a(href="") About Us
            .footer_icons
                .footer_logo Logo
                .footer_icon <i class="fa fa-phone" aria-hidden="true"></i>
                .footer_icon <i class="fa fa-envelope" aria-hidden="true"></i>
                .footer_icon <i class="fa fa-linkedin-square" aria-hidden="true"></i>
